<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merah"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:background="@color/colorRed"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/red_score"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="0"
                />
            <TextView
                android:id="@+id/activity_main_textView_foul_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foul : 0"
                />
            <Button
                android:id="@+id/activity_main_button_plus_satu_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRed"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="+1"
                />
            <Button
                android:id="@+id/activity_main_button_plus_tiga_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRed"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="+3"
                />
            <Button
                android:id="@+id/activity_main_button_minus_nollima_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRed"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="+0.5"
                />
            <Button
                android:id="@+id/activity_main_button_minus_satu_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRed"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="-1"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biru"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:background="@color/colorBlue"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/blue_score"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="0"
                />
            <TextView
                android:id="@+id/activity_main_textView_foul_biru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foul : 0"
                />
            <Button
                android:id="@+id/activity_main_button_plus_satu_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="+1"
                />
            <Button
                android:id="@+id/activity_main_button_plus_tiga_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="+3"
                />
            <Button
                android:id="@+id/activity_main_button_minus_nollima_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="+0.5"
                />
            <Button
                android:id="@+id/activity_main_button_minus_satu_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:text="-1"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/log_textView"
        android:text="Liat Log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:clickable="true"
        android:textColor="@color/colorAccent"
        />
    <Button
        android:id="@+id/activity_main_button_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:layout_margin="8dp"
        android:text="Reset"
        />
</LinearLayout>